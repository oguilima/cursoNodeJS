<h1>Editando: {{user.name}}</h1>

<form action="/users/update" method="post" class="form">
    <input type="hidden" name="id" id="id" value="{{user.id}}">

    <div class="form-control">
        <label for="name">Nome: </label>
        <input type="text" name="name" id="name" placeholder="Digite o nome do usuário" value="{{user.name}}" />
    </div>
    <div class="form-control">
        <label for="occupation">Profissão: </label>
        <input type="text" name="occupation" id="occupation" placeholder="Digite a profissão"
            value="{{user.occupation}}" />
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" id="newsletter" checked />
        {{else}}
        <input type="checkbox" name="newsletter" id="newsletter" />
        {{/if}}

        <label for="newsletter">Enviar promoções? </label>
    </div>

    <input type="submit" value="Editar">
</form>

<div class="address-container">
    <h2>Endereço:</h2>
    <form action="/address/create" method="POST">
        <input type="hidden" name="UserId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua: </label>
            <input type="text" id="street" name="street" placeholder="Digite o nome da rua">
        </div>
        <div class="form-control">
            <label for="number">Número: </label>
            <input type="text" id="number" name="number" placeholder="Digite o número da residência">
        </div>
        <div class="form-control">
            <label for="city">Cidade </label>
            <input type="text" id="city" name="city" placeholder="Digite o nome da Cidade">
        </div>
        <input type="submit" value="Incluir endereço">
    </form>
</div>